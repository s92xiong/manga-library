extends layout

block content
  div.sub-title-container
    p #{title}: 
      b #{magazine.name}
  
  ul.list-item 
    each manga in magazine_manga
      div.list-item-child
        li 
          b
            a(href=manga.url) #{manga.title}:
      li #{manga.sypnosis}
    else 
      li This magazine has no current Manga.

  section.delete-update-container
    p
      a(href=`${magazine.url}/delete`) Delete Magazine 
    p
      a(href=`${magazine.url}/update`) Update Magazine 